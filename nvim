
if vim.loader then
  vim.loader.enable()
end


-- SECTION: theme

-- Catppuccin theme
require('catppuccin').setup {
  flavour = "macchiato",
  transparent_background = true,
  term_colors = true,
  integrations = {
    nvimtree = {
      enabled = true,
      transparent_panel = true,
      show_root = true,
    },

    hop = true,
    gitsigns = true,
    telescope = true,
    treesitter = true,
    treesitter_context = true,
    ts_rainbow = true,
    fidget = true,
    alpha = true,
    leap = true,
    lsp_saga = true,
    markdown = true,
    noice = true,
    notify = true, -- nvim-notify
    which_key = true,
    navic = {
      enabled = true,
      custom_bg = "NONE", -- "lualine" will set background to mantle
    },
  },
}
-- setup must be called before loading
vim.cmd.colorscheme "catppuccin"




